{
  "pluginAlias": "MiHeaterCooler",
  "pluginType": "accessory",
  "headerDisplay": "A homebridge plugin for Mi/Aqara AC Partner",
  "footerDisplay": "This project is based on jayqizone/homebridge-mi-heatercooler.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Device name",
        "type": "string",
        "required": true
      },
      "address": {
        "title": "IP address",
        "type": "string",
        "required": true
      },
        "token": {
        "title": "token",
        "type": "string",
        "required": true
      },
        "showSID": {
        "title": "Use humidity-temperature sensor",
        "type": "boolean"
      },
        "sensorId": {
        "title": "Sensor ID",
        "type": "string",
        "required": true,
        "condition": {
            "functionBody": "return model.showSID === true;"
        }
      },
        "enableLED": {
        "title": "Enable LED",
        "type": "boolean"
      },
        "ratedPower": {
        "title": "Rated Power",
        "type": "integer",
        "required": false
      }
    }
  }
}
